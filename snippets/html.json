{
	// Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"default template": {
		"prefix": "htmldefault",
		"body": [
			"<!DOCTYPE html>",
			"<html>",
			"\t<head>",
			"\t<meta charset=\"utf-8\"/>",
			"\t<title></title>",
			"\t<meta name=\"description\" content=\"\"/>",
			"\t<meta name=\"viewport\" content=\"width=device-width, initial-scale=1\"/>",
			"\t<link rel=\"stylesheet\" type=\"text/css\" href=\"\"/>",
			"\t<!-- Place favicon.ico and apple-touch-icon.png in the root directory -->",
			"\t</head>",
			"\t<body>",
			"",
			"\t</body>",
			"</html>",
		],
		"description": "default html template"
	},
	
	"PHP tag": {
		"prefix": "php",
		"body": [
			"<?php",
			"\t$1",
			"?>"
		],
		"description": "PHP tag"
	},

	"PHP Echo short-tag": {
		"prefix": "e=",
		"body": [
			"<?= $1; ?>",
		],
		"description": "PHP echo short-tag"
	},

	"PHP foreach template": {
		"prefix": "foreach",
		"body": [
			"<?php foreach(${1:\\$array} as ${2:\\$key} ${3:=> \\$value}): ?>",
			"\t$4",
			"<?php endforeach; ?>"
		],
		"description": "PHP foreach template"
	}
}